{
	"manifest_version": 3,
	"name": "Spectrum",
	"version": "1.2.1",
	"description": "Adds custom themes and features to the spectr39s.ru website",
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"content_scripts": [
		{
			"matches": ["https://spectr39s.ru/*", "https://spectr39.ru/*"],
			"js": ["js/cssinject.js"],
			"css": ["css/fixes.css"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["css/*.css", "icons/*.svg"],
			"matches": ["https://spectr39s.ru/*", "https://spectr39.ru/*"]
		}
	]
}
